{
    "manifest_version": 2,
    "name": "ShowCode",
    "version": "1.0",
    "description": "Chrome Extension for showing you the style code at ease.",
    "icons": {
        "16": "AppIcon.png"
    },
    "browser_action": {
        "default_icon": "AppIcon.png",
        "default_title": "Show Code"
    },
    "author": "Rick Yip",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "all_frames": true,
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "devtools_page": "devtools.html",
    "offline_enabled": true,
    "permissions": [
        "tabs",
        "<all_urls>",
        "storage"
    ],
    "short_name": "Show Code"
}